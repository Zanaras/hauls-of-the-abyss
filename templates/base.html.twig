<!DOCTYPE html>
<html>
    <head>
        {# TODO: Setup theme switcher here if we add more themes. #}
        {% set theme = 'default' %}
        <meta charset="UTF-8">
        <title id="title">
            {% block title %}{% endblock %}
        </title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('/css/'~theme~'.css') }}"/>
        {% endblock %}
    </head>
    <body>
        <div id="symfony-wrapper" data-role="page">
            <div style="clear: both"></div>
            <div id="nav">
                {% include 'parts/nav.html.twig' %}
            </div>
            <div id="content" data-role="content">
                {% for fLabel, fMessages in app.flashes(['error', 'warning', 'notice']) %}
                    {% for fMessage in fMessages %}
                        <div class="flash-{{ fLabel }}">
                            {{ fMessage|trans|raw }}
                        </div>
                    {% endfor %}
                {% endfor %}
                {% block body %}{% endblock %}
            </div>
            {% block javascripts %}{% endblock %}
        </div>

        <div id="footer" data-role="footer">
                <div>
                    Server time: {{ "now"|date("H:i") }}<br />
                </div>
                <hr />
            {% if app.environment != 'prod' %}
                <div>environment: {{ app.environment }}</div>
            {% endif %}
            <div>&copy;2013-2022 by Iungard Systems, LLC</div>

        </div>
        <script type="text/javascript">
            {% block javascript %}
            {% endblock %}
            {% block jquery %}
            {% endblock %}
        </script>
    </body>

</html>
