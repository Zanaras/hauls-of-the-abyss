{% extends "base.html.twig" %}

{% block includes %}
	{{ parent() }}
	<script src="{{ asset('tablesorter/jquery.tablesorter.min.js') }}"></script>
{% endblock %}

{% block content %}
<h2>Your Journal Entries</h2>
<table id="events"><thead>
	<tr>
		<th>Date</th>
		<th>Title</th>
		<th></th>
	</tr>
</thead><tbody>
{% for journal in character.journals %}
	<tr>
		<td>{{ journal.cycle|gametime("short") }}</td>
		<td>{{ journal.date|date }}</td>
		<td><a href="{{ path("journal_read", {'id':journal.id}) }}">{{ journal.topic }}</a></td>
		<td>{# Remove, rewrite options go here, when we add them #}</td>
	</tr>
{% endfor %}
</tbody></table>

{% endblock %}

{% block jquery %}
	$("#events").tablesorter({
		sortList: [[1,1]],
	});
{% endblock %}
